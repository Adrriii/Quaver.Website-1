{% extends "layouts/app.twig" %}

{% block content %}
    <section class="bg-image bg-dark py-5 py-lg-7 px-4 px-lg-0" style="background-color: rgb(52, 53, 56) !important;">
        <img class="background" src="/img/cover.jpg" alt="">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-md-8 mx-auto">
                    <h1 class="display-5 text-white font-weight-bold">
                        Leaderboard -
                        {% if leaderboardType == 0 %}Overall Rating{% elseif leaderboardType == 2 %}Total Hits{% else %}Multiplayer{% endif %}
                    </h1>
                </div>
            </div>
        </div>
    </section>

    <section class="py-lg-5">
        <div class="container">
            {% if slug != "hits" %}
            <div class="nav-tab-scroll" id="mode-tabs">
                <div class="nav nav-tabs {% if mode == 1 %} keys4 {% else %} keys7 {% endif %}" id="tab" role="tablist">
                    <a class="nav-item nav-link {% if mode == 1 %} active-keys4 {% else %}tab-keys4{% endif %}" href="{% if slug == "multiplayer" %}/leaderboard/multiplayer?mode=1{% else %}/leaderboard?mode=1{% endif %}">
                        4 Keys
                    </a>
                    <a class="nav-item nav-link {% if mode == 2 %} active-keys7 {% else %}tab-keys7{% endif %}" href="{% if slug == "multiplayer" %}/leaderboard/multiplayer?mode=2{% else %}/leaderboard?mode=2{% endif %}">
                        7 Keys
                    </a>
                </div>
            </div>
            {% endif %}
            <div class="card">
                <div class="card-body">
                    {% include 'helpers/pagination.twig' with {
                        currentFilters: {  },
                        currentPage: page,
                        paginationPath: slug~"?page=",
                        lastPage: pages,
                        showAlwaysFirstAndLast: false
                    } only %}

                    {% include 'leaderboard/'~slug~'.twig' %}

                    {% include 'helpers/pagination.twig' with {
                        currentFilters: {  },
                        currentPage: page,
                        paginationPath: slug~"?page=",
                        lastPage: pages,
                        showAlwaysFirstAndLast: false
                    } only %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block style %}

{% endblock %}

{% block scripts %}

{% endblock %}

