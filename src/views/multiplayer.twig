{% extends "layouts/app.twig" %}

{% block content %}
    <section class="bg-image bg-dark py-5 py-lg-7 px-4 px-lg-0" style="background-color: rgb(52, 53, 56) !important;">
        <img class="background" src="{{ assets('/img/cover.jpg') }}" alt="">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-md-8 mx-auto">
                    <h1 class="display-5 text-white font-weight-bold">
                        Multiplayer Games
                    </h1>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="widget mt-4">
                <div class="widget-header">Live Games</div>
            </div>
            {% if not games.live %} There are no live games! {% endif %}
            {% for game in games.live %}
                <div class="card mb-3">
                    <div class="post post-medium">
                        <div class="post-thumbnail mt-1 mb-2 ml-2 mb-md-0">
                            <a href="{{ baseUrl('/multiplayer/game/'~game.id) }}">
                                {% if game.map.mapset_id != "-1" %}
                                    <img class="post-img" src="https://cdn.quavergame.com/banners/{{ game.map.mapset_id }}_banner.jpg">
                                {% else %}
                                    <img class="post-img" src="{{ assets('/img/inf.jpg') }}">
                                {% endif %}
                            </a>
                        </div>
                        <div class="post-body mt-1">
                            <div class="move-right mt-4 mr-2">
                                <a href="{{ baseUrl('/multiplayer/game/'~game.id) }}" class="btn btn-youtube">
                                    <b class="text-white">Watch Live</b>
                                    <i class="fas fa-circle text-white"></i>
                                </a>
                            </div>
                            <div class="body-text">
                                <a href="{{ baseUrl('/multiplayer/game/'~game.id) }}">
                                    <b>{{ game.name }}</b>
                                </a>
                            </div>
                            <div class="body-text">
                                <b>Map:</b>
                                {% if game.map.id != "-1" %}
                                    <a href="{{ baseUrl('/mapset/map/'~game.map.id) }}">
                                        <a>{{ game.map.name|truncate(60) }}</a>
                                    </a>
                                {% else %}
                                    <span>{{ game.map.name }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}

            <div class="widget mt-4">
                <div class="widget-header">Recently Played Games</div>
            </div>
            {% for game in games.recently_played %}
                <div class="card mb-3">
                    <div class="post post-medium">
                        <div class="post-thumbnail mt-1 mb-2 ml-2 mb-md-0">
                            <a href="{{ baseUrl('/multiplayer/game/'~game.id) }}">
                                {% if game.map.mapset_id != "-1" %}
                                    <img class="post-img" src="https://cdn.quavergame.com/banners/{{ game.map.mapset_id }}_banner.jpg">
                                {% else %}
                                    <img class="post-img" src="{{ assets('/img/inf.jpg') }}">
                                {% endif %}
                            </a>
                        </div>
                        <div class="post-body mt-1">
                            <div style="position: absolute;right:5px;bottom:5px; padding: 4px;" class="mr-2">
                                <b>{{ formatDate(game.time_played) }}</b>
                            </div>
                            <div class="move-right mr-2 mt-1">
                                <a href="{{ baseUrl('/multiplayer/game/'~game.id) }}" class="btn btn-primary">
                                    <b class="text-white">View Match History</b>
                                    <i class="far fa-eye text-white"></i>
                                </a>
                            </div>
                            <div class="body-text">
                                <a href="{{ baseUrl('/multiplayer/game/'~game.id) }}">
                                    <b>{{ game.name }}</b>
                                </a>
                            </div>
                            <div class="body-text">
                                <b>Map:</b>
                                {% if game.map.id != "-1" %}
                                    <a href="{{ baseUrl('/mapset/map/'~game.map.id) }}">
                                        <a>{{ game.map.name|truncate(60) }}</a>
                                    </a>
                                {% else %}
                                    <span>{{ game.map.name }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}

{% block style %}
    <style>
        a {
            color: #2575dc;
        }

        a b {
            color: #2575dc;
        }

        button b {
            color: #fff;
        }

        .text-white {
            color: #fff !important;
        }

        .move-right {
            float: right;
        }

        .post-medium .post-thumbnail img {
            max-width: 100%;
            max-height: 100%;
        }

        .post-medium .post-thumbnail {
            width: 30%;
            min-height: 0 !important;
            margin-top: 0;
        }

        .post {
            padding-bottom: 0;
            padding: 2px;
            margin-bottom: 3px;
        }

        .post-body {
            margin-top: -3px;
            padding: 4px;
        }

        .body-text {
            padding: 5px;
        }
    </style>
{% endblock %}

{% block scripts %}

{% endblock %}